{
    "name": "Tube comments",
    "description": "Enables custom disqus youtube comments",
    "version": "0.1",
    "permissions": [
        "tabs","<all_urls>"
    ],
    "browser_action": {
        "default_icon": "comment.png",
		 "default_popup": "content.html"
    },
	 "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
        {
        "matches": [
            "http://*/*",
            "https://*/*"
            ],
        "js": ["extension.js"],
        "run_at": "document_end"     
        }
    ], 
    "manifest_version": 2
}